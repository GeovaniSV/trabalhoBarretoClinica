generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id        Int     @unique @default(autoincrement()) 
  email     String  @db.VarChar(255) @unique
  senha     String  @db.VarChar(255)
  medico    Medico?
  paciente  Paciente?
}

model Paciente{
  id          Int     @unique @default(autoincrement()) 
  nome        String  @db.VarChar(255)
  telefone    String  @db.VarChar(14)
  cep         String  @db.VarChar(9)  
  usuario     User    @relation(fields: [usuarioId], references: [id])
  usuarioId   Int     @unique
  agendamento Agendamento[]
}

model Procedimentos{
  id    Int @unique @default(autoincrement())
  nome  String @unique @db.VarChar(255)
  agendamento Agendamento[]
}

model Medico{
  id            Int     @unique @default(autoincrement()) 
  nome          String  @db.VarChar(255)
  telefone      String  @db.VarChar(14)
  cep           String  @db.VarChar(9)
  especialidade String  @db.VarChar(255)
  usuario       User    @relation(fields: [usuarioId], references: [id])
  usuarioId     Int     @unique
  agendamento   Agendamento[]
}

model PlanoDeSaude{
  id          Int     @unique @default(autoincrement()) 
  nome        String  @unique @db.VarChar(255) 
  cobertura   Int
  agendamento Agendamento[]
}

model Agendamento {
  id              Int           @unique @default(autoincrement()) 
  medico          Medico        @relation(fields: [medicoId], references: [id])
  paciente        Paciente      @relation(fields: [pacienteId], references: [id])
  procedimento    Procedimentos @relation(fields: [procedimentoId], references: [id])
  planoDeSaude    PlanoDeSaude  @relation(fields: [planoDeSaudeId], references: [id])
  medicoId        Int     
  pacienteId      Int     
  procedimentoId  Int
  planoDeSaudeId  Int
}